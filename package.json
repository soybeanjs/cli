{
  "name": "@soybeanjs/cli",
  "type": "module",
  "version": "1.0.8-beta.3",
  "packageManager": "pnpm@8.13.1",
  "description": "SoybeanJS's command line tools",
  "author": {
    "name": "Soybean",
    "email": "soybeanjs@outlook.com",
    "url": "https://github.com/soybeanjs"
  },
  "license": "MIT",
  "homepage": "https://github.com/soybeanjs/cli",
  "repository": {
    "url": "https://github.com/soybeanjs/cli.git"
  },
  "bugs": {
    "url": "https://github.com/soybeanjs/cli/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "soybean": "dist/index.js",
    "soy": "dist/index.cjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsup && pnpm build-pkg",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "cleanup": "soy cleanup",
    "commit": "soy git-commit",
    "lint": "eslint . --fix",
    "prepare": "simple-git-hooks",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "soy release -e 'pnpm release-execute'",
    "release-execute": "tsx ./scripts/release.ts && pnpm soy changelog",
    "stub": "pnpm -r run stub",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "update-pkg": "soy update-pkg"
  },
  "dependencies": {
    "@soybeanjs/changelog": "0.3.13",
    "bumpp": "9.3.0",
    "c12": "1.9.0",
    "cac": "6.7.14",
    "consola": "3.2.3",
    "enquirer": "2.4.1",
    "execa": "8.0.1",
    "kolorist": "1.8.0",
    "npm-check-updates": "16.14.15",
    "rimraf": "5.0.5"
  },
  "devDependencies": {
    "@soybeanjs/cli": "link:",
    "@soybeanjs/eslint-config": "1.2.3",
    "@types/node": "20.11.24",
    "eslint": "8.57.0",
    "eslint-plugin-vue": "9.22.0",
    "fast-glob": "3.3.2",
    "lint-staged": "15.2.2",
    "simple-git-hooks": "2.9.0",
    "tsup": "8.0.2",
    "tsx": "4.7.1",
    "typescript": "5.3.3",
    "vue-eslint-parser": "9.4.2"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
