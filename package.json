{
  "name": "@soybeanjs/cli",
  "type": "module",
  "version": "1.3.1",
  "packageManager": "pnpm@10.12.1",
  "description": "SoybeanJS's command line tools",
  "author": {
    "name": "Soybean",
    "email": "soybeanjs@outlook.com",
    "url": "https://github.com/soybeanjs"
  },
  "license": "MIT",
  "homepage": "https://github.com/soybeanjs/cli",
  "repository": {
    "url": "https://github.com/soybeanjs/cli.git"
  },
  "bugs": {
    "url": "https://github.com/soybeanjs/cli/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "bin": {
      "soybean": "dist/index.js",
      "soy": "dist/index.js"
    }
  },
  "bin": {
    "soybean": "./src/bin.js",
    "soy": "./src/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsdown && pnpm build-pkg",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "cleanup": "soy cleanup",
    "commit": "soy git-commit",
    "commit:zh": "soy git-commit -l=zh-cn",
    "lint": "eslint . --fix",
    "prepare": "simple-git-hooks",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "soy release -e 'pnpm release-execute'",
    "release-execute": "tsx ./scripts/release.ts && pnpm soy changelog",
    "stub": "pnpm -r run stub",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "update-pkg": "soy update-pkg"
  },
  "dependencies": {
    "@soybeanjs/changelog": "0.3.24",
    "bumpp": "10.1.1",
    "c12": "3.0.4",
    "cac": "6.7.14",
    "consola": "3.4.2",
    "enquirer": "2.4.1",
    "execa": "9.6.0",
    "kolorist": "1.8.0",
    "npm-check-updates": "18.0.1",
    "rimraf": "6.0.1",
    "tinyglobby": "0.2.14"
  },
  "devDependencies": {
    "@soybeanjs/cli": "link:",
    "@soybeanjs/eslint-config": "1.6.1",
    "@types/node": "22.15.30",
    "eslint": "9.28.0",
    "eslint-plugin-vue": "10.2.0",
    "lint-staged": "16.1.0",
    "simple-git-hooks": "2.13.0",
    "tsdown": "0.12.9",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "vue-eslint-parser": "10.1.3"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
